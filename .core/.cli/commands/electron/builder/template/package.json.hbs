{
  "name": "{{appName}}",
  "version": "{{version}}",
  "description": "{{description}}",
  "productName": "{{productName}}",
  "author": "{{author}}",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron main.js",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "{{appId}}",
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 250
        },
        {
          "x": 320,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  },
  "repository": "https://github.com",
  "keywords": [
    "Electron",
    "app"
  ],
  "license": "CC0-1.0",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^15.2.0",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "get-port": "^5.0.0",
    "globby": "^9.2.0"
  }
}
